{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "lib": ["ES2017", "DOM"],
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
        }
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./config/jest/setupTests.ts"
    ]
}